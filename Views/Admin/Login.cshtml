@{
    ViewData["Title"] = "Acceso Administrativo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-login.css" />
}

<section class="login-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card login-card login-card-container">

                    <!-- Header -->
                    <div class="card-header text-center login-header">
                        <i class="fas fa-coffee" style="font-size: 3rem; margin-bottom: 1rem; opacity: 0.9;"></i>
                        <h3 class="mb-1">Susurros del Café</h3>
                        <p class="mb-0" style="opacity: 0.8;">Panel Administrativo</p>
                    </div>

                    <!-- Body -->
                    <div class="card-body login-body">
                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger login-alert">
                                <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.Error
                            </div>
                        }

                        <form method="post">
                            <div class="mb-4">
                                <label class="form-label" style="color: var(--coffee-primary); font-weight: 600;">
                                    <i class="fas fa-lock me-2"></i>Contraseña de Administrador
                                </label>
                                <input type="password" name="password" class="form-control login-form-control login-input"
                                       required placeholder="Ingresa tu contraseña" autofocus>
                            </div>

                            <button type="submit" class="btn w-100 login-btn">
                                <i class="fas fa-sign-in-alt me-2"></i>Acceder al Panel
                            </button>
                        </form>

                        <!-- Info adicional -->
                        <div class="text-center mt-4">
                            <small style="color: var(--coffee-gray);">
                                <i class="fas fa-shield-alt me-1"></i>
                                Acceso restringido solo para administradores
                            </small>
                        </div>
                    </div>
                </div>

                <!-- Link de regreso -->
                <div class="text-center mt-4">
                    <a href="@Url.Action("Index", "Home")" style="color: white; text-decoration: none;">
                        <i class="fas fa-arrow-left me-2"></i>Volver al sitio web
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>